<div data-role="page" id="product_page">
  <div data-role="header">
    <h1><%= @product.name %></h1>
    <%= link_to "商品一覧", products_path, :class => "ui-btn-left move-page" %>
    <a id="clear_button" class="ui-btn-right" data-icon="delete">Clear</a>
  </div>

  <div data-role="content">
    <div class="ui-grid-b" id="add_form">
      <div class="ui-block-a">
        <input type="tel" id="add_price" data-mini="true" data-default="<%= @product.default_price %>" />
      </div>
      <div class="ui-block-b">
        <input type="tel" id="add_amount" data-mini="true" data-unit="<%= @product.amount_unit %>" data-rate="<%= @product.rate %>" data-default="<%= @product.default_amount %>" maxlength="50" />
      </div>
      <div class="ui-block-c">
        <input type="tel" id="add_group" data-mini="true" data-unit="<%= @product.group_unit %>" data-default="<%= @product.default_group %>" maxlength="50" />
      </div>
    </div><!-- /grid-a -->
    <a data-role="button" id="add_button" data-mini="false">単価を計算する<span id="count"></span></a>

    <ul id="unit_list" data-role="listview" data-inset="true" data-split-icon="delete" data-split-theme="c"></ul>
  </div>
</div>

